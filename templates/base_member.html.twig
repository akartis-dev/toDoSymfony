<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>{% block title %}To do{% endblock %}</title>
	{{ encore_entry_link_tags('app') }}
	{% block stylesheets %}{% endblock %}
</head>
<body>
<div class="row" style="margin: 0">
	<div class="col m1 hero-side">
		<div class="hero-side-logo z-depth-3 hero-padding-y-2">
			<h3 class="hero-margin-0">TD</h3>
		</div>
		<div class="hero-side-menu">
			<ul class="hero-margin-0">
				<li class="{% if page is defined and page == 'index' %}hero-side-active{% endif %}"><a href="{{ path('member.index') }}"><i class="material-icons">home</i></a></li>
				<li class="{% if page is defined and page == 'profile' %}hero-side-active{% endif %}"><a href="{{ path('member.profile') }}"><i class="material-icons">account_circle</i></a></li>
				<li><a href="{{ path('app_logout') }}"><i class="material-icons">meeting_room</i></a></li>
			</ul>
		</div>
	</div>
	<div class="col m11 hero-content">
		<nav>
			<div class="nav-wrapper white navbar">
				<a href="#!" class="brand-logo"><i class="material-icons">list_alt</i>TodoList</a>
				<ul class="right hide-on-med-and-down">
{#					<li><a href="{{ path('app_login') }}"><i class="material-icons">account_circle</i></a></li>#}
					<li><a href="mobile.html"><i class="material-icons">notifications</i></a></li>
				</ul>
			</div>
		</nav>
		<div class="col s12">
			{% block body %}{% endblock %}
		</div>
	</div>
</div>
{{ encore_entry_script_tags('app') }}
{% block javascripts %}{% endblock %}
</body>
</html>
